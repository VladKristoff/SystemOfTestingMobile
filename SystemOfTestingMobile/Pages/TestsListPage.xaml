<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemOfTestingMobile.Pages.TestsListPage"
             Title="Выбор теста">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Заголовок -->
            <Label Text="Доступные тесты" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Margin="0,10"/>

            <!-- Информация о пользователе -->
            <Frame CornerRadius="15" 
                   BackgroundColor="#212121" 
                   Padding="15"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="10">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding UserName, StringFormat='Пользователь: {0}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="Выберите тест для прохождения"
                               FontSize="14"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <!-- Список тестов -->
            <CollectionView x:Name="TestsCollectionView"
                            EmptyView="Нет доступных тестов"
                            SelectionMode="Single"
                            SelectionChanged="OnTestSelected">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" 
                               Padding="0" 
                               Margin="0, 0, 15, 0"
                               BackgroundColor="#212121"
                               BorderColor="White">

                            <Grid RowDefinitions="Auto,Auto" Padding="15" Background="#212121">

                                <!-- Основная информация о тесте -->
                                <VerticalStackLayout Grid.Row="0" Spacing="8">
                                    <Label Text="{Binding Title}" 
                                           FontSize="20" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding Questions.Count, StringFormat='{0} вопросов'}"
                                               FontSize="14"
                                               TextColor="White"/>
                                        <BoxView WidthRequest="1" 
                                                 HeightRequest="15" 
                                                 Color="#E0E0E0"
                                                 VerticalOptions="Center"/>
                                        <Label Text="10-15 мин"
                                               FontSize="14"
                                               TextColor="White"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Кнопка начала теста -->
                                <Button Grid.Row="1"
                                        Text="Начать тест"
                                        FontSize="16"
                                        Margin="0,15,0,0"
                                        Clicked="OnStartTestClicked"
                                        CommandParameter="{Binding .}"/>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!-- Кнопка назад -->
            <Button Text="Назад" 
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    HeightRequest="50"
                    FontSize="16"
                    Margin="0,20,0,10"
                    Clicked="OnBackButtonClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>