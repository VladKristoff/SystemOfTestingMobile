<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemOfTestingMobile.Pages.ResultsPage"
             Title="История результатов">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="История ваших результатов" 
           FontSize="24" 
           FontAttributes="Bold"
           Margin="0,20,0,30"/>

            <CollectionView x:Name="ResultsCollectionView"
                    EmptyView="Нет сохраненных результатов"
                    SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10" BackgroundColor="#212121" Margin="0,0,0,5">
                            <Label Text="{Binding TestTitle}" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                            <Label Text="{Binding Percentage, StringFormat='Результат: {0:F1}%'}" TextColor="White"/>
                            <Label Text="{Binding Grade, StringFormat='Оценка: {0}'}" TextColor="White"/>
                            <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" TextColor="White"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <Button Text="На главную" 
            HorizontalOptions="Center"
            WidthRequest="200"
            Margin="0,30,0,0"
            Clicked="OnHomeButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>